#funcion sin argumentos y con retorno
def suma():
    num1=3
    num2=5
    return(num1+num2)
print("la suma es :", suma())
#funcion con argumentos y sin retorno
def suma(a,b):
    suma =a+b
    print(f"la suma de los elementos es:{suma}")
num1 = int(input("Ingrese el primer numero:"))
num2 = int(input("ingrese el segundo numero:"))
suma(num1,num2)
#con argumentos y con retorno
def suma(a,b):
    suma = a+b
    return (suma)
num1=int(input("Ingrese el primer numero:"))
num2= int(input("Ingrse el segundo numero:"))
print(f"El resultado de la suma es:", suma(num1,num2))
