#Eliminar un registro de la lista
def eliminar(valor):
    try:
        lista.remove(valor)
        print("Eliminado con exito")
    except ValueError:
        print("Valor no se encuentra")
num=int(input("Ingrese un valor para eliminarlo:"))
eliminar(num)




